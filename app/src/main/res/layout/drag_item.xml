<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFFAFA"
    style="@style/CardView.Light"
    app:cardElevation="6dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    card_view:cardCornerRadius="8dp"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/dragName"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:shadowRadius="1.5"
                android:shadowDx="1"
                android:shadowDy="1"
                android:typeface="sans"
                android:text="Говорят, Абрамович может продать «Челси». На него давно давят из-за политики"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@id/dragName"
                android:layout_alignLeft="@id/dragName"
                android:text="31 сентября, воскресенье"
                android:layout_marginTop="8dp"
                android:textColor="#808080"
                android:id="@+id/dragPrice"
                android:layout_height="wrap_content"
                android:textSize="22sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

